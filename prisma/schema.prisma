// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // Only needed when using a cloud provider that doesn't support the creation of new databases, like Heroku. Learn more: https://pris.ly/d/migrate-shadow
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                    String          @id @default(cuid())
  name                  String?
  email                 String?         @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  passwordResetToken    String?         @unique
  passwordResetTokenExp DateTime?
  whatsapp              String?
  role                  UserRole        @default(USER)
  subscription          SubscriptionType @default(FREE)
  subscriptionEndsAt    DateTime?
  accounts              Account[]
  sessions              Session[]
  chatbots              Chatbot[]
  conversations         Conversation[]
  downloads             Download[]
}

enum UserRole {
  USER
  ADMIN
}

enum SubscriptionType {
  FREE
  PRO
}

enum DownloadAccessLevel {
  PUBLIC
  REGISTERED
  PRO
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Chatbot {
  id              String         @id @default(cuid())
  name            String
  description     String?
  model           ChatbotModel   @default(MODEL_A)
  n8nWebhookUrl   String?
  isActive        Boolean        @default(true)
  userId          String
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations   Conversation[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

enum ChatbotModel {
  MODEL_A
  MODEL_B
  MODEL_C
}

model Conversation {
  id         String    @id @default(cuid())
  chatbotId  String
  userId     String
  messages   Message[]
  chatbot    Chatbot   @relation(fields: [chatbotId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  content        String       @db.Text
  isFromUser     Boolean
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
}

model Download {
  id            String              @id @default(cuid())
  title         String
  description   String?
  fileName      String
  filePath      String
  fileSize      Int
  mimeType      String
  accessLevel   DownloadAccessLevel @default(PUBLIC)
  category      String?             // Para organizar por categorías
  tags          String[]            // Para filtros
  downloadCount Int                 @default(0)
  userId        String              // Admin que subió el archivo
  user          User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

model Promotion {
  id            String        @id @default(cuid())
  code          String        @unique
  description   String
  discountType  DiscountType
  discountValue Float
  isActive      Boolean       @default(true)
  usageLimit    Int?
  usageCount    Int           @default(0)
  expiresAt     DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}
