# EasyPanel Production Dockerfile
FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache libc6-compat curl

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Build application
RUN npm run build

# Create startup script with migrations and user creation
RUN printf '#!/bin/sh\n\
echo "ðŸ—„ï¸ Running database migrations..."\n\
npx prisma migrate deploy || echo "Migration failed"\n\
echo "ðŸ”§ Generating Prisma client..."\n\
npx prisma generate || echo "Prisma generate failed"\n\
echo "ðŸ‘¥ Creating test users..."\n\
node scripts/create-users.js || echo "User creation failed"\n\
echo "ðŸš€ Starting application in production mode..."\n\
npm start\n\
' > start.sh

RUN chmod +x start.sh

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3000/api/health || exit 1

# Start application with migrations
CMD ["sh", "./start.sh"]